<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>blog</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-5 mb-5">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <h1 class="mb-4 text-center"><%= blog.title %></h1>
          <div class="text-center mb-4">
            <img
              src="<%= blog.coverImageURL %>"
              alt="<%= blog.title %>"
              class="img-fluid rounded shadow"
              style="max-width: 700px; max-height: 700px; object-fit: cover"
            />
          </div>
          <div class="d-flex justify-content-center mb-3">
            <span
              class="badge bg-dark text-wrap px-3 py-2 shadow-sm"
              style="font-size: 0.95rem"
            >
              ðŸ•’ Posted on <%= new Date(blog.createdAt).toLocaleString('en-US',
              { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit',
              minute: '2-digit', hour12: true }) %>
            </span>
          </div>

          <div
            class="blog-body shadow p-4 bg-white rounded"
            style="white-space: pre-line; font-size: 1.1rem; line-height: 1.8"
          >
            <%= blog.body %>

            <div class="mt-2">
              <div class="d-flex align-items-center">
                <img
                  src="<%= blog.createdBy.userImage %>"
                  alt="User Image"
                  class="rounded-circle me-2"
                  width="32"
                  height="32"
                  style="object-fit: cover"
                />

                <!-- Text -->
                <span class="text-muted" style="font-size: 0.9rem">
                  Created by <strong><%= blog.createdBy.fullName %></strong>
                </span>
              </div>
            </div>
          </div>
          <div class="container mt-3">
            <h3>Comments (<%= comments.length %>)</h3>
            <% if (locals.user) { %>
            <form action="/blog/comment/<%=blog._id %>" method="post">
              <div class="mb-3">
                <input
                  name="content"
                  type="text"
                  class="form-control"
                  placeholder="enter your comment.."
                />
              </div>
              <button type="submit" class="btn btn-sm btn-primary">Add</button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div class="d-flex align-items-start gap-3 mb-3 p-2">
          <img
            src="<%= comment.createdBy.userImage %>"
            alt="user image"
            class="rounded-circle"
            width="40"
            height="40"
            style="object-fit: cover"
          />
          <div>
            <h6 class="mb-1"><%= comment.createdBy.fullName %></h6>
            <p class="mb-0"><%= comment.content %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
